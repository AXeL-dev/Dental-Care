@model Dental_Care.Models.Ordonance

@{
    ViewBag.Title = "Suppression";
}

<!-- Intro Section -->
<section class="inner-intro bg-img overlay-bg-color light-color parallax parallax-background">
    <div class="container">
        <div class="row title">
            <h1 class="h2">@ViewBag.Title</h1>
            <div class="page-breadcrumb"> <a href="@Url.Action("Index", "Home")">Acceuil</a>/<a>Ordonance</a>/<span>@ViewBag.Title</span> </div>
        </div>
    </div>
</section>
<!-- Intro Section -->

<section class="pt-100">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                @Html.Partial("~/Views/Shared/_ErrorSuccessMsg.cshtml")
                <div class="box-resume">
                    <div class="center-top"> <i class="fa fa-clipboard fa-5x"></i> </div>
                    <p class="lead c">Êtes-vous sûr de vouloir supprimer cette ordonance ?</p>
                    <br>
                    <ul class="user-info">
                        <li><strong>@Html.DisplayNameFor(model => model.Ref)</strong> @Model.Ref</li>
                        <li><strong>@Html.DisplayNameFor(model => model.Date)</strong> @Html.DisplayFor(model => model.Date)</li>
                        <li><strong>@Html.DisplayNameFor(model => model.Contenu)</strong> @Model.Contenu</li>
                    </ul>
                    <form class="center-bottom" action="@Url.Action("Delete")" method="post">
                        <a href="@Url.Action("Index")" class="btn btn-md btn-color-line ">Annuler</a> &nbsp;&nbsp;&nbsp; <input type="submit" value="Supprimer" class="btn btn-md btn-color-line">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section -->
