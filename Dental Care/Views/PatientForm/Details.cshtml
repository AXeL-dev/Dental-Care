@model Dental_Care.Models.PatientForm

@using Dental_Care.Helpers

@{
    ViewBag.Title = "Détails";
}

<!-- Intro Section -->
<section class="inner-intro bg-img overlay-bg-color light-color parallax parallax-background">
    <div class="container">
        <div class="row title">
            <h1 class="h2">@ViewBag.Title</h1>
            <div class="page-breadcrumb"> <a href="@Url.Action("Index", "Home")">Acceuil</a>/<a>Rendez-vous</a>/<span>@ViewBag.Title</span> </div>
        </div>
    </div>
</section>
<!-- Intro Section -->

<section class="pt-100">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                @Html.Partial("~/Views/Shared/_ErrorSuccessMsg.cshtml")
                <div class="box-resume">
                    <div class="center-top"> <i class="fa fa-file fa-5x"></i> </div>
                    <ul class="user-info patient-form">
                        <li><strong>@Html.DisplayNameFor(model => model.Name)</strong> @Model.Name</li>
                        <li><strong>@Html.DisplayNameFor(model => model.Sexe)</strong> @(Model.Sexe == "M" ? "Male" : "Femelle")</li>
                        <li><strong>@Html.DisplayNameFor(model => model.Age)</strong> @Model.Age</li>
                        <li><strong>@Html.DisplayNameFor(model => model.Tel)</strong> @Model.Tel</li>
                        <li>
                            <div class="panel panel-primary">
                                <div class="panel-heading">@Html.DisplayNameFor(model => model.DentsId)</div>
                                <div class="panel-body">
                                    <div>
                                        <strong>@Html.DisplayNameFor(model => model.Dents.Image)</strong>
                                        @{
                                            var base64 = Convert.ToBase64String(Model.Dents.Image);
                                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                        }
                                        <img src='@imgSrc' style="max-width:250px; max-height:250px;" />
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayNameFor(model => model.Dents.Note)</strong> @Model.Dents.Note
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="center-bottom"> <a href="@(UserHelper.isDentist() || UserHelper.isAdmin() ? Url.Action("Index") : Url.Action("Profil", "User", new { id = Model.UserId }))" class="btn btn-md btn-color-line">Retour</a> </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section -->
